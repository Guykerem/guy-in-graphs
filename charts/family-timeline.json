{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Family Timeline",
    "subtitle": "Growth of my family from 1993 to 2023 with key events",
    "fontSize": 20,
    "subtitleFontSize": 14,
    "font": "Helvetica Neue, sans-serif",
    "anchor": "start"
  },
  "width": 800,
  "height": 400,
  "padding": 10,
  "data": {
    "values": [
      { "year": "1993", "family_size": 3, "event": "I am born!" },
      { "year": "1994", "family_size": 3 },
      { "year": "1995", "family_size": 3 },
      { "year": "1996", "family_size": 4, "event": "Noa is born" },
      { "year": "1997", "family_size": 4 },
      { "year": "1998", "family_size": 4 },
      { "year": "1999", "family_size": 4 },
      { "year": "2000", "family_size": 5, "event": "Aviv is born" },
      { "year": "2001", "family_size": 5 },
      { "year": "2002", "family_size": 5 },
      { "year": "2003", "family_size": 5 },
      { "year": "2004", "family_size": 5 },
      { "year": "2005", "family_size": 5 },
      { "year": "2006", "family_size": 6, "event": "Rona is born" },
      { "year": "2007", "family_size": 6 },
      { "year": "2008", "family_size": 6 },
      { "year": "2009", "family_size": 6 },
      { "year": "2010", "family_size": 6 },
      { "year": "2011", "family_size": 6 },
      { "year": "2012", "family_size": 6 },
      { "year": "2013", "family_size": 6 },
      { "year": "2014", "family_size": 6 },
      { "year": "2015", "family_size": 6 },
      { "year": "2016", "family_size": 6 },
      { "year": "2017", "family_size": 6 },
      { "year": "2018", "family_size": 6 },
      { "year": "2019", "family_size": 6 },
      { "year": "2020", "family_size": 6 },
      { "year": "2021", "family_size": 7, "event": "Married Noa" },
      { "year": "2022", "family_size": 7 },
      { "year": "2023", "family_size": 8, "event": "Mia is born" }
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "interpolate": "step-after",
        "strokeWidth": 2,
        "color": "#2f4b7c"
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "axis": {
            "labelAngle": -45,
            "labelFontSize": 11,
            "tickCount": 10,
            "grid": false
          }
        },
        "y": {
          "field": "family_size",
          "type": "quantitative",
          "axis": {
            "title": "Family Members",
            "grid": true,
            "gridColor": "#eee",
            "titleFontSize": 14,
            "labelFontSize": 11
          }
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "#f95d6a",
        "size": 60
      },
      "encoding": {
        "x": { "field": "year", "type": "ordinal" },
        "y": { "field": "family_size", "type": "quantitative" }
      }
    },
    {
      "transform": [
        { "filter": "datum.event != null" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "fontSize": 12,
        "color": "#333"
      },
      "encoding": {
        "x": { "field": "year", "type": "ordinal" },
        "y": { "field": "family_size", "type": "quantitative" },
        "text": { "field": "event", "type": "nominal" }
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Helvetica Neue, sans-serif",
      "titleFont": "Helvetica Neue, sans-serif"
    },
    "view": { "stroke": "transparent" }
  }
}