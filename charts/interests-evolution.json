{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Evolution of Interests",
    "fontSize": 20,
    "font": "Helvetica Neue, sans-serif",
    "anchor": "middle",
    "color": "#333",
    "offset": 20
  },
  "width": 800,
  "height": 400,
  "padding": 20,
  "data": {
    "url": "data/interests_evolution.csv"
  },
  "transform": [
    {
      "fold": ["Science", "History", "Philosophy", "Video Games", "Art", "Psychology", "Movies (Storytelling)", "Technology"],
      "as": ["Interest", "Value"]
    },
    {
      "filter": "datum.Value != null"
    },
    {
      "calculate": "datum.Age == 14 && datum.Interest == 'Video Games' ? 'Peak gaming interest (95%)' : datum.Age == 18 && datum.Interest == 'Psychology' ? 'Psychology becomes primary focus (85%)' : datum.Age == 31 && datum.Interest == 'Technology' ? 'Technology and career alignment (88%)' : null",
      "as": "callout"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "strokeCap": "round",
        "strokeJoin": "round"
      },
      "encoding": {
        "x": {
          "field": "Age",
          "type": "quantitative",
          "title": "Age (years)",
          "axis": {
            "grid": false,
            "labelFont": "Helvetica Neue, sans-serif",
            "titleFont": "Helvetica Neue, sans-serif",
            "labelFontSize": 12,
            "titleFontSize": 14,
            "titlePadding": 15,
            "labelPadding": 10,
            "values": [0, 8, 16, 24, 32],
            "format": ".0f"
          }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Interest Level (%)",
          "axis": {
            "grid": false,
            "labelFont": "Helvetica Neue, sans-serif",
            "titleFont": "Helvetica Neue, sans-serif",
            "labelFontSize": 12,
            "titleFontSize": 14,
            "titlePadding": 15,
            "labelPadding": 10,
            "values": [0, 25, 50, 75, 100],
            "format": ".0f"
          }
        },
        "color": {
          "field": "Interest",
          "type": "nominal",
          "scale": {
            "range": ["#2f4b7c", "#f95d6a", "#ff7c43", "#ffa600", "#8ac926", "#1982c4", "#6a4c93", "#52796f"]
          },
          "legend": {
            "title": null,
            "orient": "top",
            "direction": "horizontal",
            "labelFont": "Helvetica Neue, sans-serif",
            "labelFontSize": 12,
            "symbolSize": 100,
            "symbolType": "stroke"
          }
        }
      }
    },
    {
      "transform": [{"filter": "datum.callout != null"}],
      "mark": {
        "type": "circle",
        "size": 80,
        "fill": "white",
        "stroke": "#333",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {"field": "Age", "type": "quantitative"},
        "y": {"field": "Value", "type": "quantitative"},
        "tooltip": [
          {"field": "callout", "type": "nominal", "title": "Note"},
          {"field": "Interest", "type": "nominal"},
          {"field": "Value", "type": "quantitative", "title": "Interest Level", "format": ".0f"}
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null,
      "padding": 20
    },
    "axis": {
      "domainColor": "#ddd",
      "tickColor": "#ddd"
    }
  }
} 